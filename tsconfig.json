{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./out",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "main.ts",
    "lib/**/*",
    "test/**/*",
    "scripts/**/*",
    "migrations/**/*"
  ],
  "exclude": [
    "out/**/*"
  ]
}
